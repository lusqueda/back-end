
<div class="d-flex justify-content-center">

    <form id="loginForm" class="col-md-3" >
        {{#if this.error}}
        <div class="alert alert-danger" role="alert">
            No existe el usuario o no esta autorizado para ingresar !!!
        </div>
        {{/if}}
        <h1>Login</h1>
        <br/>
        <div class="form-outline mb-4">
            <input type="email" name="email" class="form-control" />
            <label class="form-label" for="email">E-mail</label>
        </div>

        <div class="form-outline mb-4">
            <input type="password" name="password" class="form-control" />
            <label class="form-label" for="password">Contraseña</label>
        </div>

        <button type="submit" class="btn btn-primary btn-block mb-4">Ingresar</button>
        <div class="form-outline mb-4">
            <p>No estas registrado ? <a href="/register">Regístrate aquí</a></p>
        </div>
         <div class="form-outline mb-4">
            <p>Olvidaste tu contraseña ? <a href="/resetPassword">Restáurarla aquí</a></p>
        </div>
    </form>
</div>

<div class="d-flex justify-content-center">
    
    <a href="/api/session/github"><button class="btn btn-primary btn-block mb-4">Ingresar con <i class="bi bi-github"></i></button></a>
</div>
<script src="/js/login.js"></script>