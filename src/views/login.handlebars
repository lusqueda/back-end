<div class="d-flex justify-content-center">
    <form id="loginForm" class="col-md-3" >
        {{#if this.error}}
            <div class="alert alert-danger auto-close" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                No existe el usuario o no esta autorizado para ingresar             
            </div>            
        {{/if}}
        {{#if this.success}}
            <div class="alert alert-danger auto-close" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                {{this.success}}           
            </div>            
        {{/if}}
        <h1 class="mt-4 mb-4">e-Commerce - Login</h1>
        <div class="form-outline mb-4">
            <input type="email" name="email" class="form-control" required/>
            <label class="form-label" for="email">E-mail</label>
        </div>

        <div class="form-outline mb-4">
            <input type="password" name="password" class="form-control" required/>
            <label class="form-label" for="password">Contraseña</label>
        </div>

        <button type="submit" class="btn btn-primary btn-block mb-4">Ingresar</button>
        <div class="form-outline mb-4">
            <p>No estas registrado ? <a href="/views/register">Regístrate aquí</a></p>
        </div>
         <div class="form-outline mb-4">
            <p>Olvidaste tu contraseña ? <a href="/views/resetPassword">Restáurarla aquí</a></p>
        </div>
    </form>
</div>

